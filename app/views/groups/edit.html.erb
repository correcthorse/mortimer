<!-- #content_body -->
<div id="content_body">
	<h1>Edit Group</h1>
	<div class="edit_group">
		<%= form_tag group_url(@group), :method => "put" do %>
			<%= error_messages_for :group %>
			<%= render :partial => "form" %>

			<div class="buttons clear">
				<% if @group.allows_admin_access_for?(current_user) %>
					<button type="submit" class="btn_update">Update</button>
				<% end %>
				<a href="<%= home_path %>" class="btn_cancel cancel">Cancel</a>
			</div>
			
		<% end %>
	</div>
</div>
<!-- /#content_body -->


<!-- #sidebar -->
<div id="sidebar">
	<!-- .module -->
	<div class="module">
		<div id="menu" class="module_box">
			<div class="module_content">
				<ul class="listing_common">
					<li><a href="<%= new_entry_url(:entry => {:group_id => @group.id}) %>" class="icon add">Add entry</a></li>
					<% if current_user.is_admin? %>  
					<li class="last"><%= link_to "Delete this Group", group_path(@group), :method => "delete", 
					  :class => "destroy icon remove", :confirm => "Are you sure you want to delete this group?" %></li>
					<% end %> 					
				</ul>
			</div>
		</div>
	</div>
	<!-- /.module -->
</div>
<!-- /#sidebar -->
